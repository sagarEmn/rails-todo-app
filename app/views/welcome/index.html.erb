<% content_for :title, "Welcome" %>

<div class="welcome-container">
  <h1>Welcome to Rails Todo App</h1>
  <p>Manage your tasks efficiently with our simple todo application.</p>
  
  <div class="welcome-actions">
    <%= link_to "Get Started", "#", class: "btn btn-primary" %>
    <%= link_to "Learn More", "#", class: "btn btn-secondary" %>
  </div>
</div>

<style>
  .welcome-container {
    text-align: center;
    padding: 4rem 2rem;
  }
  
  .welcome-actions {
    margin-top: 2rem;
  }
  
  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    margin: 0 0.5rem;
    text-decoration: none;
    border-radius: 4px;
  }
  
  .btn-primary { background-color: #007bff; color: white; }
  .btn-secondary { background-color: #6c757d; color: white; }
</style>