<div class="todos-container">
  <div class="header-section">
    <div>
      <h1>My Todo List</h1>
      <% if params[:query].present? %>
        <p class="search-info">Search results for: "<%= params[:query] %>"</p>
      <% elsif params[:filter] == 'pending' %>
        <p class="filter-info">Showing: Pending tasks</p>
      <% elsif params[:filter] == 'completed' %>
        <p class="filter-info">Showing: Completed tasks</p>
      <% end %>
    </div>
    <div class="header-actions">
      <%= link_to "New Todo", new_todo_path, class: "btn btn-primary" %>
      <% if params[:query].present? || params[:filter].present? %>
        <%= link_to "Clear Filter", todos_path, class: "btn btn-secondary ml-2" %>
      <% end %>
    </div>
  </div>

  <div class="todos-grid">
    <% if @todos.any? %>
      <% @todos.each do |todo| %>
        <div class="todo-card <%= 'completed' if todo.completed %>">
          <div class="todo-content">
            <h3><%= link_to todo.title, todo_path(todo) %></h3>
            <p class="todo-description"><%= truncate(todo.description, length: 100) %></p>
            <div class="todo-status">
              <span class="status-badge <%= todo.completed ? 'completed' : 'pending' %>">
                <%= todo.completed ? '✓ Completed' : '○ Pending' %>
              </span>
            </div>
          </div>
          <div class="todo-actions">
            <%= link_to "View", todo_path(todo), class: "btn btn-secondary" %>
            <%= link_to "Edit", edit_todo_path(todo), class: "btn btn-warning" %>
            <%= button_to "Delete", todo_path(todo), method: :delete, 
                confirm: "Are you sure?", class: "btn btn-danger" %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="empty-state">
        <h3>No todos yet!</h3>
        <p>Create your first todo to get started.</p>
        <%= link_to "Create Todo", new_todo_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>