<%= form_with(model: todo, local: true, class: "todo-form") do |form| %>
  <% if todo.errors.any? %>
    <div class="error-messages">
      <h4><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h4>
      <ul>
        <% todo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, rows: 4, class: "form-control" %>
  </div>

  <div class="form-group checkbox-group">
    <%= form.check_box :completed, class: "form-checkbox" %>
    <%= form.label :completed, "Mark as completed", class: "checkbox-label" %>
  </div>

  <div class="form-actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>